#!MC 800

$!EXPORTSETUP
   EXPORTFNAME = "looper.avi"
   EXPORTFORMAT = AVI
   BITDUMPREGION = ALLFRAMES
   IMAGEWIDTH = 1024
   EXPORTREGION = ALLFRAMES

$!LOOP |NUMZONES|

$!VARSET |Z| = |LOOP|

$!LOOP |NUMLINEMAPS|

$!LINEMAP [|LOOP|]  ASSIGN{ZONE = |Z|}
$!REDRAWALL

$!ENDLOOP

$!IF |Z| == 1
   $!EXPORT
   APPEND = NO
$!ENDIF

$!IF |Z| != 1
   $!EXPORT
   APPEND = YES
$!ENDIF


$!ENDLOOP

$!EXPORTFINISH
